{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@": ["./"],
      "@comp": ["./components"]
    }
  },
  "include": ["./components/**/*.tsx", "./components/**/*.ts"]
}
